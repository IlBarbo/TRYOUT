<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Convertitore">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="LUNGHEZZA"
        android:textColor="@color/tanAccent"
        android:textSize="27sp"
        android:textStyle="bold"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/textFrom1"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="10dp"
            android:text="@string/from"
            android:textColor="@color/tanAccent"
            android:textSize="23sp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="30dp" />


        <TextView
            android:id="@+id/textTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/tanAccent"
            android:layout_marginEnd="155dp"
            android:text="@string/to"
            android:textSize="23sp"
            />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="30dp" />

        <EditText
            android:id="@+id/TextNumber1"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:background="@drawable/custom_input"
            android:layout_gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"
             />


        <Button
            android:id="@+id/converti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_circle"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="30dp"
            android:text="@string/converti"
            android:textColor="@color/white"

            />

        <TextView
            android:id="@+id/risultatoconv"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:ems="10"
            android:textSize="18sp"
            android:background="@drawable/custom_input"
            android:paddingStart="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"
             />

    </LinearLayout>

</LinearLayout>
